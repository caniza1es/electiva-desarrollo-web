<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle || "Jergar.io" %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/main.css">
    <% if (useSweetAlert) { %>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% } %>
</head>
<body>

<header class="container my-4">
    <div class="d-flex justify-content-between align-items-center">
        <a href="/" class="text-decoration-none d-flex align-items-center">
            <h1 class="display-4 text-primary">üìñ Jergar.io</h1>
        </a>

        <nav>
            <ul class="nav">
                <li class="nav-item"><a class="nav-link text-dark" href="/">üè† Inicio</a></li> 
                <% if (isAuthenticated) { %>
                    <li class="nav-item"><a class="nav-link text-dark" href="/users/profile">üë§ Perfil</a></li> 
                    <li class="nav-item"><a class="nav-link text-dark" href="/slangs/add">‚ûï Agregar Jerga</a></li> 
                <% } else { %>
                    <li class="nav-item"><a class="nav-link text-dark" href="/users/login">üîë Ingresar</a></li> 
                <% } %>
            </ul>
        </nav>
    </div>
</header>

<% if (!useSweetAlert) { %>
    <div class="message-container">
        <% if (error && error.length > 0) { %>
            <div class="alert alert-danger"><%- error %></div>
        <% } %>
        <% if (success && success.length > 0) { %>
            <div class="alert alert-success"><%- success %></div>
        <% } %>
    </div>
<% } %>

<% if (useSweetAlert) { %>
    <script>
        <% if (error && error.length > 0) { %>
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: '<%= error %>'
            });
        <% } %>
        <% if (success && success.length > 0) { %>
            Swal.fire({
                icon: 'success',
                title: '√âxito',
                text: '<%= success %>'
            });
        <% } %>
    </script>
<% } %>

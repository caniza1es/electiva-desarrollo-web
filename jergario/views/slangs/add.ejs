<%- include('../partials/header', { pageTitle: 'Jergar.io - Agregar Nueva Jerga' }) %>

<div class="d-flex flex-column min-vh-100">
    <main class="container my-5 flex-grow-1">
        <div class="card shadow-lg p-4 mx-auto" style="max-width: 900px;">
            <div class="card-body">
                <h2 class="text-center mb-4" style="font-size: 5rem;">📝</h2>
                <form action="/slangs/add" method="POST" class="my-4">
                    <div class="mb-3">
                        <input type="text" id="slang" name="slang" class="form-control" placeholder="💬 Jerga" required>
                    </div>
                    <div class="mb-3">
                        <textarea id="definition" name="definition" class="form-control" rows="3" placeholder="📖 Definición" required></textarea>
                    </div>
                    <div class="mb-3">
                        <textarea id="example" name="example" class="form-control" rows="3" placeholder="📝 Ejemplo" required></textarea>
                    </div>
                    <div class="mb-3">
                        <select id="region" name="region" class="form-select" required>
                            <option value="general">🌎 General</option>
                            <% const regiones = {
                                'España': '🇪🇸',
                                'México': '🇲🇽',
                                'Argentina': '🇦🇷',
                                'Colombia': '🇨🇴',
                                'Chile': '🇨🇱',
                                'Perú': '🇵🇪',
                                'Venezuela': '🇻🇪',
                                'Ecuador': '🇪🇨',
                                'Guatemala': '🇬🇹',
                                'Cuba': '🇨🇺',
                                'Bolivia': '🇧🇴',
                                'Honduras': '🇭🇳',
                                'Paraguay': '🇵🇾',
                                'El Salvador': '🇸🇻',
                                'Nicaragua': '🇳🇮',
                                'Costa Rica': '🇨🇷',
                                'Puerto Rico': '🇵🇷',
                                'Panamá': '🇵🇦',
                                'Uruguay': '🇺🇾',
                                'República Dominicana': '🇩🇴'
                            }; %>
                            <% for (const [regionOption, flag] of Object.entries(regiones)) { %>
                                <option value="<%= regionOption %>"><%= flag %> <%= regionOption %></option>
                            <% } %>
                        </select>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Agregar Jerga</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
    <%- include('../partials/footer') %> 
</div>

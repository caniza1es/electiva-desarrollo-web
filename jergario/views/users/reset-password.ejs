<%- include('../partials/header', { pageTitle: 'Restablecer Contraseña - Jergar.io' }) %>

<div class="d-flex flex-column min-vh-100">
    <main class="container my-5 flex-grow-1">
        <div class="card shadow-lg p-4 mx-auto" style="max-width: 600px;">
            <div class="card-body">
                <h2 class="text-center mb-4" style="font-size: 5rem;">🔑</h2>
                <h3 class="text-center text-muted"><em>Restablecer Contraseña</em></h3>

                <form action="/users/reset-password/<%= token %>" method="POST" class="my-4">
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">🔒 Nueva Contraseña:</label>
                        <input type="password" name="newPassword" id="newPassword" class="form-control" required>
                    </div>

                    <div class="mb-3">
                        <label for="confirmNewPassword" class="form-label">🔒 Confirmar Nueva Contraseña:</label>
                        <input type="password" name="confirmNewPassword" id="confirmNewPassword" class="form-control" required>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Restablecer Contraseña</button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <p><a href="/users/login" class="text-primary">Volver al inicio de sesión</a></p>
                </div>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
</div>

<%- include('../partials/header', { pageTitle: 'Administración de Usuarios' }) %>

<main>
    <h2>Administración de Usuarios</h2>


    <form action="/users/admin" method="GET">
        <input type="text" name="search" placeholder="Buscar usuario o email..." value="<%= searchQuery || '' %>">
        <button type="submit">Buscar</button>
    </form>

    <table>
        <thead>
            <tr>
                <th>Nombre de Usuario</th>
                <th>Email</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td>
                        <form action="/users/admin/delete-user" method="POST" style="display:inline;">
                            <input type="hidden" name="userId" value="<%= user._id %>">
                            <button type="submit" onclick="return confirm('¿Estás seguro de eliminar este usuario?')">Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</main>

<%- include('../partials/footer') %>

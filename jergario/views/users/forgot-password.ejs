<%- include('../partials/header', { pageTitle: 'Recuperar Contraseña - Jergar.io' }) %>

<div class="d-flex flex-column min-vh-100">
    <main class="container my-5 flex-grow-1">
        <div class="card shadow-lg p-4 mx-auto" style="max-width: 600px;">
            <div class="card-body">
                <h2 class="text-center mb-4" style="font-size: 5rem;">🔒</h2>
                <h3 class="text-center text-muted"><em>Recuperar Contraseña</em></h3>

                <form action="/users/forgot-password" method="POST" class="my-4">
                    <div class="mb-3">
                        <label for="email" class="form-label">📧 Email:</label>
                        <input type="email" name="email" id="email" class="form-control" required>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Enviar Enlace de Restablecimiento</button>
                    </div>
                </form>

                <div class="d-flex justify-content-center mt-3">
                    <a href="/users/login" class="text-decoration-none text-primary">← Volver al inicio de sesión</a>
                </div>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
</div>
